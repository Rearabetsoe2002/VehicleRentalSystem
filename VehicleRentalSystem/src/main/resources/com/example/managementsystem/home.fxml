<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.managementsystem.HomeController">
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER">
            <Label text="Vehicle Rental System" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <ImageView>
                <Image url="@../images/car-rental.png" />
            </ImageView>

            <Text text="Welcome to Our Vehicle Rental System" style="-fx-font-size: 28; -fx-fill: #2c3e50;"/>

            <Text text="Rent your perfect vehicle with just a few clicks!"
                  style="-fx-font-size: 16; -fx-fill: #7f8c8d;"/>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Login" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                        onAction="#goToLogin"/>
                <Button text="Register" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"
                        onAction="#goToRegister"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox style="-fx-background-color: #ecf0f1; -fx-padding: 10;" alignment="CENTER">
            <Label text="Â© 2023 Vehicle Rental System. All rights reserved." style="-fx-text-fill: #7f8c8d;"/>
        </HBox>
    </bottom>
</BorderPane>